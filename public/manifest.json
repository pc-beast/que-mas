{
     "manifest_version": 3,
     "name": "qué más: what more",
     "description": "A simple, clean, ans elegent implementation of the features that would make life easier on whatsapp.",
     "version": "1.0.0",
     "version_name": "alpha",
     "author": "pc-beast",
     "content_scripts": [
          {
               "matches": [
                    "https://web.whatsapp.com/*"
               ],
               "js": [
                    "./js/content_script.js"
               ],
               "css": [
                    "./style.css"
               ]
          }
     ],
     "permissions": [
          "activeTab"
     ],
     "action": {
          "default_popup": "popup.html"
     }
}